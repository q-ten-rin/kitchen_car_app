<%= form_with model: [post, comment], local: false do |f| %>
  <% if comment.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
      
  <%= f.text_area :body, rows:'5', placeholder: "コメントをここに", class: "w-100" %>
  <%= f.submit "送信" %>
<% end %>