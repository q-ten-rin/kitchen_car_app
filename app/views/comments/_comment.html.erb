<turbo-frame id="comment-<%= comment.id %>" >
  <div class="card mb-3 mt-3 p-2 col-lg-10 offset-lg-1">
    <div class="d-flex align-items-start">
      <!-- アイコン -->
      <div class="me-3">
        <% if comment.user.avatar.attached? %>
          <%= image_tag comment.user.avatar, class: "rounded-circle", style: "width:50px; height:50px; object-fit: cover;" %>
        <% else %>
          <div class="rounded-circle bg-secondary d-inline-flex justify-content-center align-items-center" style="width:50px; height:50px; font-size:24px; color:white;">
            <i class="bi bi-person"></i>
          </div>
        <% end %>
      </div>

      <!-- コメント本文 -->
      <div class="flex-grow-1">
        <p class="mb-1"><%= comment.body %></p>
      </div>

      <!-- 編集・削除ボタン -->
      <% if current_user.id == comment.user.id %>
        <div class="text-end">
          <%= link_to "編集", edit_post_comment_path(comment.post, comment), class: "btn btn-primary btn-sm me-2" %>
          <%= link_to "削除", post_comment_path(comment.post, comment), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm me-2" %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>