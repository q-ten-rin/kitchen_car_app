<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <h2>パスワードの再設定</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "新しいパスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "新しいパスワードの確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
        </div>

        <div class="actions">
          <%= f.submit "送信する", class: "btn btn-primary w-100 mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
