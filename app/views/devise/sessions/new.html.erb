<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <h2>ログイン</h2>

      <%= button_to user_google_oauth2_omniauth_authorize_path,
        method: :post,
        data: { turbo: false },
        class: "btn btn-danger w-100 mb-3" do %>
        <i class="bi bi-google me-2"></i>
        Googleでログイン
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false } }) do |f| %>
        <div class="field">
          <%= f.label :name, "名前" %><br />
          <%= f.text_field :name, autofocus: true, class: "form-control form-control-lg" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary w-100 mt-3", id: "login-button" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to "新規登録はこちら", new_user_registration_path, class: "me-3" %>
        <%= link_to "パスワードを忘れた方", new_user_password_path %>
      </div>
    </div>
  </div>
</div>