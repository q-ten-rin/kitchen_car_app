<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h1 class="text-center mt-5">新規投稿</h1>
      <%= render 'form', post: @post %>
    </div>
  </div>
</div>
